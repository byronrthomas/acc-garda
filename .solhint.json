{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "gas-custom-errors": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 80
      }
    ]
  }
}